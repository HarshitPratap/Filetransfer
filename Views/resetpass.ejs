<%-include('./includes/header'); %>
    <section class="wraper">
      <div class="box">
        <% if (locals.status != null) {
          %>
          <div class="alert alert-<%=locals.status?'success':'danger'%>" role="alert">
            <%=locals.message%>
          </div>
          <%
        }%>
        <h1 class="boxtitle">SIGNUP</h1>
        <form action="/auth/register" method="post" id="resetForm">
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="*******" value="<%=locals.req?locals.req.password:''%>">
          </div>
          <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="*******" value="<%=locals.req?locals.req.confirm_password:''%>">
          </div>
          <div class="form-group mt-4">
            <input type="submit" value="RESET" class="btn btn-primary btn-lg">
          </div>
        </form>
      </div>
    </section>
<%- include('./includes/footer'); %>